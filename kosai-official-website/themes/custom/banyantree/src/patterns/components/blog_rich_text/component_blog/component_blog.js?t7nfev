    // $(`<p class="slick-progress"><span class="big">1/</span><span class="small">${totalSlick}</span></p>`).insertAfter(`${componentClass} .slick-prev`)
    let isFirstTime = true;
    $(`${componentClass} .slick`).on('init reInit afterChange', function (event, slick, currentSlide, nextSlide) {
      if (isFirstTime) {
        $(`<p class="slick-progress"><span class="big">1/</span><span class="small">${totalSlick}</span></p>`).insertAfter(`${componentClass} .slick-prev`)
      }
      var currentSlick = (currentSlide ? currentSlide : 0 ) + 1;
      var totalSlick = slick.slideCount;
      
      $(`${componentClass} .slick-progress`).html(`<span class="big">${currentSlick}/</span><span class="small">${totalSlick}</span></p>`)
      isFirstTime = false;
    });

